---
interface Props {
	className?: string;
	title: string;
}

const { className, title } = Astro.props;
---

<div class:list={["card", className]}>
	<h1>{title}</h1>
	<slot />
</div>

<style>
	.card {
		position: relative;
		overflow: hidden;
		background: var(--primary);
		color: var(--black);
		border-radius: 8px;
		padding: 20px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		z-index: 1;
	}
	.card h1 {
		line-height: 1em;
	}

	.large {
		grid-row: span 3;
	}

	.wide {
		grid-row: span 1;
	}

	.tall {
		grid-row: span 3;
	}

	@media (min-width: 1024px) {
		.card h1 {
			font-size: clamp(5rem, 8vw, 7.6rem);
		}
		.wide {
			grid-column: span 2;
		}
		.tall {
			grid-row: span 2;
		}
		.large {
			grid-column: span 2;
			grid-row: span 2;
		}
	}
</style>
