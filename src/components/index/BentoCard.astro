---
interface Props {
	href?: string;
	className?: string;
	title: string;
}

const { href, className, title } = Astro.props;
---

<a href={href} class:list={["card", className]}>
	<h2>{title}</h2>
	<slot />
</a>

<style>
	.card {
		position: relative;
		overflow: hidden;
		background: var(--neutral-2);
		color: var(--red);
		border-radius: 8px;
		padding: 28px;
		box-shadow: 0 4px 20px rgba(17, 17, 19, 0.5);
		transition: color 0.3s ease;
		z-index: 1;
	}
	.card:hover {
		color: var(--dark-red);
	}
	.card::before {
		content: "";
		position: absolute;
		background: var(--light-blue);
		transition: all 0.3s ease;
		z-index: -1;
	}

	.card h2 {
		font-size: clamp(1rem, 3vw, 2rem);
		line-height: 1em;
	}

	.large {
		grid-row: span 3;
	}

	.wide {
		grid-row: span 1;
	}

	.tall {
		grid-row: span 2;
	}

	.very-tall {
		grid-row: span 3;
	}

	@media (min-width: 1024px) {
		.wide {
			grid-column: span 2;
		}
		.tall {
			grid-row: span 2;
		}
		.large {
			grid-column: span 2;
			grid-row: span 3;
		}
	}
</style>
