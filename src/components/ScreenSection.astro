---
interface Props {
	id?: string;
	className?: string;
}

const { className, id } = Astro.props;
---

<section class={className} id={id}>
	<slot />
</section>

<style>
	section {
		min-height: calc(100vh - var(--header-height) - 2 * var(--global-padding));
		border-radius: 8px;
		background: none;
		display: flex;
		flex-direction: column;
		gap: var(--global-padding);
		margin: var(--global-padding);
	}

	section + section {
		margin-top: calc(var(--global-padding) + var(--header-height));
	}

	.normal {
		background: var(--background);
		color: var(--foreground);
	}

	.light-blue {
		background: var(--light-blue);
		color: var(--black);
	}

	.black {
		background: var(--black);
		color: var(--primary);
	}

	.primary {
		background: var(--primary);
		color: var(--black);
	}
</style>
