---
import BaseHead from "../components/BaseHead.astro";
import Experience from "../components/cv/Experience.astro";
import Bento from "../components/index/Bento.astro";
import BentoCard from "../components/index/BentoCard.astro";
import BentoCardTitle from "../components/index/BentoCardTitle.astro";
import IndexHeader from "../components/IndexHeader.astro";
import Section from "../components/Section.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<script>
			import { createRandomSweepStyles } from "../scripts/sweeping-cards";
			createRandomSweepStyles();
		</script>
	</head>

	<body>
		<IndexHeader />
		<main>
			<Section className="normal">
				<Bento>
					<BentoCardTitle title="Hey, I'm Callum, Welcome." className="large">
						<p>
							I am a web developer and designer, with experience building high quality
							user experiences in the fintech, gaming, and charity spaces. Have a look
							around to see some of my work.
						</p>
					</BentoCardTitle>
					<BentoCard href="/projects/game-master" title="Case Study: Game Master">
						<p>
							I designed and built a web app for writing and organising notes,
							specifically targetting TTRPG players. →
						</p>
					</BentoCard>
					<BentoCard title="Explore Projects →" href="/projects">
						<div class="hover-area">
							<p>Check out some of the other projects I have worked on.</p>
						</div>
					</BentoCard>
					<BentoCard
						title="Case Study: playQ →"
						href="/projects/playq"
						className="very-tall"
					>
						<p>
							I built an app to organise and share lists of videogames. Powered by IGDB.
						</p>
					</BentoCard>
					<BentoCard title="Blog →" className="wide" href="/blog">
						<p>
							I sometimes write my thoughts. You can read what I have been thinking about
							here.
						</p>
					</BentoCard>
					<BentoCard title="My Experience ↓" href="#experience-section">
						<p>
							I have over 5 years experience in product management and UX design, and a
							further 1 year as a full time web developer.
						</p>
					</BentoCard>
					<BentoCard
						title="Case Study: This Little Piggy →"
						href="/projects/this-little-piggy"
					>
						<p>
							I built a landing page and a simple admin workflow for a local animal
							charity.
						</p>
					</BentoCard>
					<BentoCard title="Contact Me ↓" href="#contact-section" />
				</Bento>
			</Section>
			<Section className="light-blue" id="experience-section">
				<div class="container">
					<h1>Experience</h1>
					<div class="exp-grid">
						<div class="exp-left" id="exp-left">
							<Experience title="Freelance Development">
								<p>
