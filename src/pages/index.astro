---
import BaseHead from "../components/BaseHead.astro";
import Bento from "../components/index/Bento.astro";
import BentoCard from "../components/index/BentoCard.astro";
import BentoCardTitle from "../components/index/BentoCardTitle.astro";
import SocialButton from "../components/index/SocalButton.astro";
import IndexHeader from "../components/IndexHeader.astro";
import Section from "../components/Section.astro";

import Bluesky from "../components/icons/bluesky.svg";
import LinkedIn from "../components/icons/linkedin.svg";
import Email from "../components/icons/email.svg";
import Twitter from "../components/icons/twitter.svg";
import Insta from "../components/icons/instagram.svg";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ScrollFade from "../components/util/ScrollFade.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<script>
			import { bentoAnimations } from "../scripts/animation";
			import { sweepStyles } from "../scripts/sweeping-cards";

			sweepStyles();
			bentoAnimations();
		</script>
	</head>

	<body>
		<ScrollFade threshold={100}>
			<IndexHeader />
		</ScrollFade>
		<main>
			<Section>
				<Bento>
					<BentoCardTitle title="Hey, I'm Callum, Welcome." className="large" id="left">
						I am a web developer and designer, with experience building high quality user
						experiences in the fintech, gaming, and charity spaces. Have a look around to
						see some of my work.
					</BentoCardTitle>
					<BentoCard
						href="/projects/game-master"
						title="Case Study: Game Master"
						id="right"
					>
						I designed and built a web app for writing and organising notes, specifically
						targetting TTRPG players. →
					</BentoCard>
					<BentoCard title="Explore Projects →" href="/projects" id="right">
						Check out some of the other projects I have worked on.
					</BentoCard>
					<BentoCard
						title="Case Study: playQ →"
						href="/projects/playq"
						className="very-tall"
						id="right"
					>
						I built an app to organise and share lists of videogames. Powered by IGDB.
					</BentoCard>
					<BentoCard title="Blog →" className="wide" href="/blog" id="left">
						I sometimes write my thoughts. You can read what I have been thinking about
						here.
					</BentoCard>
				</Bento>
				<div class="socials">
					<SocialButton id="left">
						<Bluesky slot="icon" />
						Bluesky
					</SocialButton>
					<SocialButton id="left">
						<LinkedIn slot="icon" />
						LinkedIn
					</SocialButton>
					<SocialButton id="left">
						<Insta slot="icon" />
						Instagram
					</SocialButton>
					<SocialButton id="right">
						<Twitter slot="icon" />
						Twitter (X)
					</SocialButton>
					<SocialButton id="right">
						<Email slot="icon" />
						Email
					</SocialButton>
				</div>
				<Bento>
					<BentoCard title="My Experience ↓" href="#experience-section" id="left">
						I have over 5 years experience in product management and UX design, and a
						further 1 year as a full time web developer.
					</BentoCard>
					<BentoCard
						title="Case Study: This Little Piggy →"
						href="/projects/this-little-piggy"
						id="left"
					>
						I built a landing page and a simple admin workflow for a local animal charity.
					</BentoCard>
					<BentoCard id="right" title="Contact Me ↓" href="#contact-section" />
				</Bento>
			</Section>
			<Section className="light-blue" id="experience-section">
				<h1>Experience</h1>
			</Section>
			<Section className="light-blue" id="experience-section">
				<h1>Experience</h1>
			</Section>
		</main>
	</body>
</html>

<style>
	body {
		width: var(--global-width-pc);
		margin: auto;
	}

	main {
		padding-top: var(--header-height);
	}

	.container {
		padding: 4rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-card {
		width: 50vw;
		height: 80vh;
		border-radius: 16px;
		margin: auto;
		background: var(--primary);
	}

	.underline {
		text-decoration: underline;
	}

	.socials {
		width: 100%;
		display: flex;
		justify-content: stretch;
		gap: var(--global-padding);
	}

	.exp-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;
		min-width: 0;
	}
	.exp-left {
		width: 100%;
		min-width: 0;
		grid-column: span 2;
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.exp-right {
		border-left: 2px solid var(--red);
		padding-left: 16px;
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	@media (max-width: 1024px) {
		p {
			display: none;
		}
	}
</style>
