---
import Bento from "~/components/bento/Bento.astro";
import { BentoCard } from "~/components/bento/bento";
import { SpotlightCard } from "~/components/bento/spotlight-card";

import BaseLayout from "~/layouts/BaseLayout.astro";
---

<BaseLayout>
	<main>
		<Bento>
			<BentoCard title="Hello" href="/projects/game-master" tall client:load>
				I designed and built a web app for writing and organising notes, specifically
				targetting TTRPG players. â†’
			</BentoCard>
			<BentoCard title="I work on this" href="/projects" wide client:load>
				Check out some of the other projects I have worked on.
			</BentoCard>
			<BentoCard title="playQ" large href="/projects/playq" client:load>
				I built an app to organise and share lists of videogames. Powered by IGDB.
			</BentoCard>
			<BentoCard title="Thanks" href="/blog" client:load>
				I sometimes write my thoughts. You can read what I have been thinking about here.
			</BentoCard>
		</Bento>
		<SpotlightCard interactive client:load>
			<h2>I am a title</h2>
			<p>I am the rest of the content</p>
		</SpotlightCard>
	</main>
</BaseLayout>

<style>
	main {
		display: flex;
		flex-direction: column;
		gap: var(--global-padding);
		margin-bottom: 240px;
	}

	.container {
		padding: 4rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.contact-card {
		width: 50vw;
		height: 80vh;
		border-radius: 16px;
		margin: auto;
		background: var(--primary);
	}

	.underline {
		text-decoration: underline;
	}

	.socials {
		width: 100%;
		display: flex;
		justify-content: stretch;
		gap: var(--global-padding);
	}

	.exp-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;
		min-width: 0;
	}
	.exp-left {
		width: 100%;
		min-width: 0;
		grid-column: span 2;
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.exp-right {
		border-left: 2px solid var(--red);
		padding-left: 16px;
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	@media (max-width: 1024px) {
		p {
			display: none;
		}
	}
</style>
